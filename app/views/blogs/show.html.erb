<h1><%= @blog.title%></h1>
<%= link_to @blog.title,blog_path(@blog)%>
<p><%= @blog.description%></p>
<% if !@blog.blog_image.blank? %>
    <%= image_tag @blog.blog_image %>
<% end %>
<%= link_to "Back" ,root_path %> <br /> 
    <% if user_signed_in? %>
    <% if @blog.user_id == current_user.id %>
        <%= link_to "Edit" ,edit_blog_path(@blog), class: "btn btn-xs btn-warning glyphicon glyphicon-pencil" %> |
        <%= link_to "Delete", blog_path(@blog),method: :delete,data: {confirm: "Blog will be deleted permanently"}, class: "btn btn-xs btn-warning"  %>
    <% end %>
<% end %>